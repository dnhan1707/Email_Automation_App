<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>History</title>
</head>
<body>
    
  <div class="list-group list-group-flush border-bottom scrollarea">
      <% emails.forEach(function(email) { %>
        <a href="#" class="list-group-item list-group-item-action py-3 lh-sm">
          <div class="d-flex w-100 align-items-center justify-content-between">
            <strong class="mb-1"><%=email.subject  %></strong>
            <small class="text-body-secondary"><%=email.sent_at  %></small>
            <% if(email.status === 'sent') {%>
              <form action="/view/<%=email.id  %>">
                <button type="submit">View</button>
              </form>
            <% } else {%>
              <form action="/view/<%=email.id  %>">
                <button type="submit">Update</button>
              </form>
              <% } %>
          </div>
        </a>
      <% }); %>
  </div>
  <script>
    var emailElements = document.querySelectorAll('.list-group-item .col-10');
    emailElements.forEach(function(emailBodyElement) {
        emailBodyElement.innerHTML = emailBodyElement.innerText;
    });
  </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>